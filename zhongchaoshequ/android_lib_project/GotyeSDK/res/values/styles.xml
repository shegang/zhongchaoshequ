<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->

    </style>

    <style name="GotyeTitleStyle" parent="">

        <item name="android:background">@drawable/gotye_bg_title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/gotye_padding_left_right</item>
        <item name="android:paddingRight">@dimen/gotye_padding_left_right</item>
    </style>

    <style name="GotyeTitleTextStyle" parent="">

        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gotye_text_white</item>
    </style>

    <style name="GotyeTitleTextSmallStyle" parent="GotyeTitleTextMiddleStyle">

        <item name="android:textSize">12sp</item>
    </style>

    <style name="GotyeTitleTextMiddleStyle" parent="GotyeTitleTextStyle">

        <item name="android:textSize">18sp</item>
    </style>
    
      <style name="GotyeMessageTextStyle" parent="">

        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GotyeListViewTextStyle" parent="">

        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gotye_text_dark_gray</item>
    </style>

    <style name="GotyeListViewStyle" parent="">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="GotyeContentPaddingStyle" parent="">
        <item name="android:paddingLeft">@dimen/gotye_padding_left_right</item>
        <item name="android:paddingRight">@dimen/gotye_padding_left_right</item>
    </style>
    
    <style name="GotyeListViewItemStyle" parent="GotyeContentPaddingStyle">
    </style>

    <style name="GotyeDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/gotye_bg_report</item><!--除去背景色-->
    </style>

</resources>

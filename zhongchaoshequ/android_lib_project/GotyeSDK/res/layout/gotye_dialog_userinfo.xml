<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/gotye_btn_dialog_close"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@android:color/transparent"
        android:src="@drawable/gotye_btn_dialog_close_selector" />

    <com.gotye.sdk.ui.view.imageview.AsycImageView
        android:id="@+id/gotye_icon"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/gotye_username"
        style="@style/GotyeTitleTextMiddleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gotye_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/gotye_tmp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gotye_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:scaleType="fitXY"
        android:src="@drawable/gotye_bg_userinfo_spilt" />

    <TextView
        android:id="@+id/gotye_userid"
        style="@style/GotyeTitleTextMiddleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gotye_tmp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/gotye_tmp2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gotye_userid"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:scaleType="fitXY"
        android:src="@drawable/gotye_bg_userinfo_spilt" />

    <TextView
        android:id="@+id/gotye_usersex"
        style="@style/GotyeTitleTextMiddleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gotye_tmp2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/gotye_usersex"
        android:scaleType="fitXY"
        android:src="@drawable/gotye_bg_userinfo_spilt"
        android:visibility="invisible" />

</RelativeLayout>